<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="?android:selectableItemBackground">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/image_view_circular_number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_alignBottom="@+id/btn_syllabus_download" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_circular_heading"
                android:textSize="20sp"
                android:text="January"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/image_view_circular_number"
                android:layout_toEndOf="@+id/image_view_circular_number"
                android:textColor="#000"
                android:layout_marginLeft="5sp"/>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/innerCv"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:layout_below="@+id/txt_circular_heading"
                android:layout_toRightOf="@+id/image_view_circular_number"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#445566"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical|center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="W.D."
                            android:textColor="@color/white"
                            android:id="@+id/textView1" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#e3e3e3"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical|center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="22"
                            android:textColor="@color/black_color"
                            android:id="@+id/txt_working_days" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#445566"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical|center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="A"
                            android:textColor="@color/white"
                            android:id="@+id/textView2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#e3e3e3"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical|center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="01"
                            android:textColor="@color/black_color"
                            android:id="@+id/txt_absent" />
                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>