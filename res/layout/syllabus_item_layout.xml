<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="?android:selectableItemBackground">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/image_view_circular_number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_alignBottom="@+id/btn_syllabus_download" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_circular_heading"
                android:textSize="20sp"
                android:text="F.A. 1"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/image_view_circular_number"
                android:layout_toEndOf="@+id/image_view_circular_number"
                android:textColor="#000"
                android:layout_marginLeft="5sp"/>


            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download"
                android:id="@+id/btn_syllabus_download"
                android:layout_below="@+id/txt_circular_heading"
                android:layout_toRightOf="@+id/image_view_circular_number"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:drawableRight="@drawable/ic_file_download_black_24dp"
                android:drawablePadding="10dp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>