<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="?android:selectableItemBackground">



            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/image_view_circular_number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:textColor="@color/white"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_circular_heading"
                android:textSize="15sp"
                android:text="Mathematics"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/image_view_circular_number"
                android:layout_toEndOf="@+id/image_view_circular_number"
                android:textColor="#000"/>


            <include layout="@layout/item_divider"
                android:layout_marginTop="5dp"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:id="@+id/include1"
                android:layout_below="@id/image_view_circular_number"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_below="@+id/include1"
                android:layout_marginTop="10dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical|center">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:id="@+id/innerCv1"
                        card_view:cardElevation="2dp"
                        card_view:cardUseCompatPadding="true"
                        android:background="#445566">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Created At"
                                android:id="@+id/textView3"
                                android:gravity="center_vertical|center"
                                android:padding="5dp"
                                android:background="#445566"
                                android:textColor="@color/white"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="20-02-2016"
                                android:id="@+id/txt_created_at"
                                android:gravity="center_vertical|center"
                                android:padding="5dp"
                                android:textColor="@color/black_color"/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical|center">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:id="@+id/innerCv2"
                        card_view:cardElevation="2dp"
                        card_view:cardUseCompatPadding="true"
                        android:background="#aa4a4a">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Updated At"
                                android:id="@+id/textView4"
                                android:gravity="center_vertical|center"
                                android:padding="5dp"
                                android:background="#445566"
                                android:textColor="@color/white"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="20-02-2016"
                                android:gravity="center_vertical|center"
                                android:padding="5dp"
                                android:textColor="@color/black_color"
                                android:id="@+id/txt_updated_at" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>