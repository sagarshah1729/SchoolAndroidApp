<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <!--Leave Details-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout1">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_holiday_date"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="20-AUG-2016 (Wednesday)"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/black_color"
                    android:padding="10dp" />

                <include
                    layout="@layout/item_divider"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/txt_holiday_date"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Please kindly approve my leaves because i am suffering from fever from last two days. And doctor suggested me to do rest at hom only."
                    android:id="@+id/txt_holiday_details"
                    android:layout_below="@+id/txt_holiday_date"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/material_blue_grey_80"
                    android:padding="10dp"
                    android:typeface="serif"
                    android:minLines="1"
                    android:maxLines="4"/>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>